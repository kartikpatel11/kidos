<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kidos.KidosFindLocation"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/btn_searchloc"
		android:textColor="#888888"
		android:background="#FFFFFF"
		android:layout_marginTop="0dp"
		android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:text="Auto-detect Current Location" 
        android:gravity="left|center_vertical"/>
    
      <TextView 
        android:id="@+id/txt_available_options"
		android:layout_below="@+id/btn_searchloc"
		android:layout_marginTop="40dp"
		android:layout_marginLeft="10dp"
		android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Available Options"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    
    <ListView
        android:id="@+id/lst_activityareas"
        android:layout_below="@+id/txt_available_options"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
