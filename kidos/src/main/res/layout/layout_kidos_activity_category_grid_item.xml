<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/gridviewitem">
    
<ImageView
        android:id="@+id/img_grid_category"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
    </ImageView>
 
    <TextView
        android:id="@+id/txt_grid_category"
        android:layout_below="@+id/img_grid_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="14sp" >
    </TextView>
    
    <TextView
        android:id="@+id/txt_grid_total"
        android:layout_toRightOf="@+id/txt_grid_category"
        android:layout_alignTop="@+id/txt_grid_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:textColor="#38BC9B"
        android:textSize="14sp" >
    </TextView>
    
</RelativeLayout>
