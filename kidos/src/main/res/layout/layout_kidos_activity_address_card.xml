 <!-- cardview for description -->
	<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/card_address"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    >
      
	  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      >  
      
     <LinearLayout 
      android:id="@+id/layout_activity_address_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="10dp"
      >
	      
	      
	 <LinearLayout 
      android:id="@+id/layout_activity_address_vertical"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_weight="6"
      >
        <TextView
        		  android:id="@+id/txt_activity_address_label"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:textColor="#8e8d8d"
        		  android:textSize="15dp"
        		  android:text="Address"
        		  android:textStyle="bold"/>
      
        <TextView
        		  android:id="@+id/txt_activity_address"
			      android:layout_height="wrap_content"
			      android:layout_width="wrap_content"
			      android:layout_below="@+id/txt_activity_address_label"
			      android:textColor="#040404"
        		  android:textSize="13dp"
        		  android:textStyle="normal"
        		  android:text="no address"/>
      </LinearLayout>
        
          <ImageView
				       android:id="@+id/img_activity_address_map_thumbnail"
				       android:layout_toRightOf="@+id/layout_activity_address"
				       android:layout_height="80dp"
				       android:layout_width="0dp"
				       android:layout_marginRight="0dp"
				       android:layout_alignParentTop="true"
				       android:layout_weight="2"
				       android:layout_gravity="right"
				       
				       />
          </LinearLayout>
		
		</RelativeLayout>
	</android.support.v7.widget.CardView>
