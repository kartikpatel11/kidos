<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="match_parent"
 >
      <TextView 
        android:id="@+id/txt_custom_actionbar_location"
		android:layout_marginLeft="3dp"
		android:textColor="#FFFFFF"
	    android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:text="Locating..."
        />
  <ImageView
      android:id="@+id/img_custom_actionbar_arrow"
      android:src="@drawable/ic_action_arrow_right_bottom"
      android:layout_toRightOf="@+id/txt_custom_actionbar_location"
      android:layout_alignBottom="@+id/txt_custom_actionbar_location"
      android:layout_width="12dp"
      android:layout_height="12dp"
      />
    
</RelativeLayout>
