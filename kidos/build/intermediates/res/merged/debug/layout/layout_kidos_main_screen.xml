<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
       <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kidosmainscreencardview"
        >

	    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            >
 		    <TextView
       android:id="@+id/txt_hidden_activity_id"
        android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:visibility="gone"
      />
 		    
 	  <ImageView
	        android:id="@+id/img_activity_profilepicture"
	        android:layout_width="match_parent"
	        android:layout_height="200dp"
	        android:scaleType="fitXY"
	      />    
 		    
   		<TextView
	      android:id="@+id/txt_activity_header"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_below="@+id/img_activity_profilepicture"
	      android:layout_marginTop="10dp"
	      android:layout_marginLeft="3dp"
	      android:textColor="#000000"
		  android:textSize="15dp"
      	  android:textStyle="bold" 
      	  />
   		
   		<TextView
	      android:id="@+id/txt_activity_area"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_marginLeft="3dp"
	      android:layout_marginTop="3dp"
	      android:layout_below="@id/txt_activity_header"
	      android:textColor="#000000"
		  android:textSize="10dp"
      	  android:textStyle="bold" 
      	  />		         

		   <Button
		    android:id="@+id/btn_activity_rating"
		    android:layout_width="40dp"
		    android:layout_height="30dp"
		    android:layout_alignTop="@+id/txt_activity_header"
		    android:gravity="center"
		    android:layout_alignRight="@+id/img_activity_profilepicture"
		    android:layout_marginRight="3dp"
		    android:layout_below="@+id/img_activity_profilepicture"
		    android:background="@drawable/ratingbutton"
		    android:layout_marginLeft="40dp"
		    android:textColor="#FFFFFF"
		    android:textSize="12dp"
		    android:textStyle="bold" /> 

		</RelativeLayout>
		</android.support.v7.widget.CardView>		
</LinearLayout>
