 <!-- cardview for description -->
	<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/card_description"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    >
      
	  <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      >  
        <!-- TextView
        		  android:id="@+id/txt_activity_detail_header"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_marginTop="5dp"
			      android:layout_marginLeft="5dp"
                  android:textColor="#48A8C7"
        		  android:textSize="18dp"
        		  android:textStyle="bold" 
        		  android:text="Activity Description"/-->
      
        	  <TextView
        		  android:id="@+id/txt_activity_description_label"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_marginTop="10dp"
			      android:layout_marginLeft="10dp"
                  android:textColor="#8e8d8d"
        		  android:textSize="15dp"
        		  android:textStyle="bold"
        		  android:text="Description"/>	
        
        
          <TextView
        		  android:id="@+id/txt_activity_detail"
			      android:layout_width="match_parent"
			      android:layout_height="wrap_content"
			      android:layout_below="@+id/txt_activity_description_label"
			      android:layout_alignLeft="@+id/txt_activity_description_label"
			      android:layout_marginTop="5dp"
			      android:textColor="#040404"
        		  android:textSize="13dp"
        		  android:textStyle="normal"
        		  android:layout_marginBottom="10dp" 
        		  android:text="Discover the process of painting and composition while having fun and producing quality work. Classes will include: painting demonstrations and one-on-one instruction as students paint during class to explore color theory, still-lifes, value, composition and the history of painting. According to the material design guidelines a mini FAB should have the same icon size as a standard FAB, but be 40dp in diameter as opposed to the standard 56dp. So we need to define a new style for the mini FAB"/>
		
		</RelativeLayout>

    </android.support.v7.widget.CardView>
